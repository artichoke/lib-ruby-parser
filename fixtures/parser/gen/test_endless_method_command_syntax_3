--INPUT
def obj.foo = puts "Hello"
--LOCATIONS
~~~ keyword (root)
       ~ operator (root)
        ~~~ name (root)
            ~ assignment (root)
~~~~~~~~~~~~~~~~~~~~~~~~~~ expression (root)
    ~~~ selector (root -> definee)
    ~~~ expression (root -> definee)
              ~~~~ selector (root -> body)
              ~~~~~~~~~~~~ expression (root -> body)
                   ~ begin (root -> body -> args -> 0)
                         ~ end (root -> body -> args -> 0)
                   ~~~~~~~ expression (root -> body -> args -> 0)
--AST
s(:defs,
  s(:send, nil, "obj"), "foo", nil,
  s(:send, nil, "puts",
    s(:str, "Hello")))
