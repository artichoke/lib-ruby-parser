--INPUT
def obj.foo(x) = puts x
--LOCATIONS
~~~ keyword (root)
       ~ operator (root)
        ~~~ name (root)
               ~ assignment (root)
~~~~~~~~~~~~~~~~~~~~~~~ expression (root)
    ~~~ selector (root -> definee)
    ~~~ expression (root -> definee)
           ~ begin (root -> args)
             ~ end (root -> args)
           ~~~ expression (root -> args)
            ~ expression (root -> args -> arglist -> 0)
                 ~~~~ selector (root -> body)
                 ~~~~~~ expression (root -> body)
                      ~ expression (root -> body -> args -> 0)
--AST
s(:defs,
  s(:send, nil, "obj"), "foo",
  s(:args,
    s(:arg, "x")),
  s(:send, nil, "puts",
    s(:lvar, "x")))
