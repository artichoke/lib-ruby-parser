--INPUT
while class Foo a = tap do end; end; break; end
--LOCATIONS
                                   ~ begin ()
                                            ~~~ end ()
~~~~~ keyword ()
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression ()
      ~~~~~ keyword (cond)
            ~~~ name (cond)
                                ~~~ end (cond)
      ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression (cond)
            ~~~ name (cond/name)
            ~~~ expression (cond/name)
                  ~ operator (cond/body)
                ~ name (cond/body)
                ~~~~~~~~~~~~~~ expression (cond/body)
                        ~~ begin (cond/body/value)
                           ~~~ end (cond/body/value)
                    ~~~~~~~~~~ expression (cond/body/value)
                    ~~~ selector (cond/body/value/call)
                    ~~~ expression (cond/body/value/call)
                                     ~~~~~ keyword (body)
                                     ~~~~~ expression (body)
--AST
s(:while,
  s(:class,
    s(:const, nil, "Foo"), nil,
    s(:lvasgn, "a",
      s(:block,
        s(:send, nil, "tap"), nil, nil))),
  s(:break))
