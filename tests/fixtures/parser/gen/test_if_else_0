--INPUT
if foo then bar; else baz; end
--LOCATIONS
~~ keyword ()
                           ~~~ end ()
                 ~~~~ else ()
       ~~~~ begin ()
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression ()
   ~~~ name (cond)
   ~~~ expression (cond)
            ~~~ name (truthy)
            ~~~ expression (truthy)
                      ~~~ name (falsey)
                      ~~~ expression (falsey)
--AST
s(:if,
  s(:lvar, "foo"),
  s(:lvar, "bar"),
  s(:lvar, "baz"))
