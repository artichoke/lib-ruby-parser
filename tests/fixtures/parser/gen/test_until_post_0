--INPUT
begin meth end until foo
--LOCATIONS
               ~~~~~ keyword ()
~~~~~~~~~~~~~~~~~~~~~~~~ expression ()
                     ~~~ name (expr)
                     ~~~ expression (expr)
~~~~~ begin (body)
           ~~~ end (body)
~~~~~~~~~~~~~~ expression (body)
      ~~~~ selector (body/stmt[0])
      ~~~~ expression (body/stmt[0])
--AST
s(:until_post,
  s(:lvar, "foo"),
  s(:kwbegin,
    s(:send, nil, "meth")))
