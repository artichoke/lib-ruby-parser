--INPUT
let (:a) { m do; end }
--LOCATIONS
         ~ begin ()
                     ~ end ()
~~~~~~~~~~~~~~~~~~~~~~ expression ()
~~~ selector (call)
~~~~~~~~ expression (call)
    ~ begin (call/args[0])
       ~ end (call/args[0])
    ~~~~ expression (call/args[0])
     ~ begin (call/args[0]/stmt[0])
     ~~ expression (call/args[0]/stmt[0])
             ~~ begin (body)
                 ~~~ end (body)
           ~~~~~~~~~ expression (body)
           ~ selector (body/call)
           ~ expression (body/call)
--AST
s(:block,
  s(:send, nil, "let",
    s(:begin,
      s(:sym, "a"))), nil,
  s(:block,
    s(:send, nil, "m"), nil, nil))
