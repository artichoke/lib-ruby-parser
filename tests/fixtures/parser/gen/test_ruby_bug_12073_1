--INPUT
def foo raise; raise A::B, ''; end
--LOCATIONS
~~~ keyword ()
    ~~~ name ()
                               ~~~ end ()
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression ()
        ~~~~~ expression (args)
        ~~~~~ name (args/arg[0])
        ~~~~~ expression (args/arg[0])
               ~~~~~ selector (body)
               ~~~~~~~~~~~~~~ expression (body)
                        ~ name (body/args[0])
                      ~~ double_colon (body/args[0])
                     ~~~~ expression (body/args[0])
                     ~ name (body/args[0]/scope)
                     ~ expression (body/args[0]/scope)
                           ~ begin (body/args[1])
                            ~ end (body/args[1])
                           ~~ expression (body/args[1])
--AST
s(:def, "foo",
  s(:args,
    s(:arg, "raise")),
  s(:send, nil, "raise",
    s(:const,
      s(:const, nil, "A"), "B"),
    s(:str, "")))
