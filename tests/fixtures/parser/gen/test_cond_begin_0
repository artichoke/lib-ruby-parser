--INPUT
if (bar); foo; end
--LOCATIONS
~~ keyword ()
               ~~~ end ()
        ~ begin ()
~~~~~~~~~~~~~~~~~~ expression ()
   ~ begin (cond)
       ~ end (cond)
   ~~~~~ expression (cond)
    ~~~ name (cond/stmt[0])
    ~~~ expression (cond/stmt[0])
          ~~~ name (truthy)
          ~~~ expression (truthy)
--AST
s(:if,
  s(:begin,
    s(:lvar, "bar")),
  s(:lvar, "foo"), nil)
