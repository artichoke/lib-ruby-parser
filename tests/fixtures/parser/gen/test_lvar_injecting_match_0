--INPUT
/(?<match>bar)/ =~ 'bar'; match
--LOCATIONS
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression ()
                ~~ selector (stmt[0])
~~~~~~~~~~~~~~~~~~~~~~~~ expression (stmt[0])
~ begin (stmt[0]/re)
              ~ end (stmt[0]/re)
~~~~~~~~~~~~~~~ expression (stmt[0]/re)
 ~~~~~~~~~~~~~ expression (stmt[0]/re/part[0])
                   ~ begin (stmt[0]/value)
                       ~ end (stmt[0]/value)
                   ~~~~~ expression (stmt[0]/value)
                          ~~~~~ name (stmt[1])
                          ~~~~~ expression (stmt[1])
--AST
s(:begin,
  s(:match_with_lvasgn,
    s(:regexp,
      s(:str, "(?<match>bar)"),
      s(:regopt)),
    s(:str, "bar")),
  s(:lvar, "match"))
