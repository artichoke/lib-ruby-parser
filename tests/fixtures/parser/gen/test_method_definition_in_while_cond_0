--INPUT
while def foo; tap do end; end; break; end
--LOCATIONS
                              ~ begin ()
                                       ~~~ end ()
~~~~~ keyword ()
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression ()
      ~~~ keyword (expr)
          ~~~ name (expr)
                           ~~~ end (expr)
      ~~~~~~~~~~~~~~~~~~~~~~~~ expression (expr)
                   ~~ begin (expr/body)
                      ~~~ end (expr/body)
               ~~~~~~~~~~ expression (expr/body)
               ~~~ selector (expr/body/call)
               ~~~ expression (expr/body/call)
                                ~~~~~ keyword (body)
                                ~~~~~ expression (body)
--AST
s(:while,
  s(:def, "foo", nil,
    s(:block,
      s(:send, nil, "tap"), nil, nil)),
  s(:break))
