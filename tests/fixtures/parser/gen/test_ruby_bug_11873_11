--INPUT
a b(c(d)), /x/m do end
--LOCATIONS
                ~~ begin ()
                   ~~~ end ()
~~~~~~~~~~~~~~~~~~~~~~ expression ()
~ selector (call)
~~~~~~~~~~~~~~~ expression (call)
   ~ begin (call/arg[0])
        ~ end (call/arg[0])
  ~ selector (call/arg[0])
  ~~~~~~~ expression (call/arg[0])
     ~ begin (call/arg[0]/arg[0])
       ~ end (call/arg[0]/arg[0])
    ~ selector (call/arg[0]/arg[0])
    ~~~~ expression (call/arg[0]/arg[0])
      ~ selector (call/arg[0]/arg[0]/arg[0])
      ~ expression (call/arg[0]/arg[0]/arg[0])
           ~ begin (call/arg[1])
             ~ end (call/arg[1])
           ~~~~ expression (call/arg[1])
            ~ expression (call/arg[1]/part[0])
              ~ expression (call/arg[1]/options)
--AST
s(:block,
  s(:send, nil, "a",
    s(:send, nil, "b",
      s(:send, nil, "c",
        s(:send, nil, "d"))),
    s(:regexp,
      s(:str, "x"),
      s(:regopt, "m"))), nil, nil)
