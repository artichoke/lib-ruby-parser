--INPUT
true ? 1.tap do |n| p n end : 0
--LOCATIONS
                            ~ colon ()
     ~ question ()
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression ()
~~~~ expression (cond)
             ~~ begin (if_true)
                        ~~~ end (if_true)
       ~~~~~~~~~~~~~~~~~~~~ expression (if_true)
         ~~~ selector (if_true/call)
       ~~~~~ expression (if_true/call)
       ~ expression (if_true/call/recv)
                ~ begin (if_true/args)
                  ~ end (if_true/args)
                ~~~ expression (if_true/args)
                 ~ expression (if_true/args/arg[0])
                 ~ name (if_true/args/arg[0]/arg[0])
                 ~ expression (if_true/args/arg[0]/arg[0])
                    ~ selector (if_true/body)
                    ~~~ expression (if_true/body)
                      ~ name (if_true/body/arg[0])
                      ~ expression (if_true/body/arg[0])
                              ~ expression (if_false)
--AST
s(:if,
  s(:true),
  s(:block,
    s(:send,
      s(:int, "1"), "tap"),
    s(:args,
      s(:procarg0,
        s(:arg, "n"))),
    s(:send, nil, "p",
      s(:lvar, "n"))),
  s(:int, "0"))
