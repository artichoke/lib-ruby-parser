--INPUT
m def x(); end; 1.tap do end
--LOCATIONS
~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression ()
~ selector (stmt[0])
~~~~~~~~~~~~~~ expression (stmt[0])
  ~~~ keyword (stmt[0]/args[0])
      ~ name (stmt[0]/args[0])
           ~~~ end (stmt[0]/args[0])
  ~~~~~~~~~~~~ expression (stmt[0]/args[0])
       ~ begin (stmt[0]/args[0]/args)
        ~ end (stmt[0]/args[0]/args)
       ~~ expression (stmt[0]/args[0]/args)
                      ~~ begin (stmt[1])
                         ~~~ end (stmt[1])
                ~~~~~~~~~~~~ expression (stmt[1])
                  ~~~ selector (stmt[1]/call)
                ~~~~~ expression (stmt[1]/call)
                ~ expression (stmt[1]/call/recv)
--AST
s(:begin,
  s(:send, nil, "m",
    s(:def, "x",
      s(:args), nil)),
  s(:block,
    s(:send,
      s(:int, "1"), "tap"), nil, nil))
