--INPUT
case foo; 
        in a: {b:}, c:
          p c
      ; end
--LOCATIONS
~~~~ keyword ()
                                                        ~~~ end ()
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression ()
     ~~~ name (expr)
     ~~~ expression (expr)
                   ~~ keyword (in_body[0])
                   ~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression (in_body[0])
                      ~~~~~~~~~~~ expression (in_body[0]/pattern)
                       ~ operator (in_body[0]/pattern/item[0])
                      ~~~~~~~ expression (in_body[0]/pattern/item[0])
                      ~ expression (in_body[0]/pattern/item[0]/key)
                         ~ begin (in_body[0]/pattern/item[0]/value)
                            ~ end (in_body[0]/pattern/item[0]/value)
                         ~~~~ expression (in_body[0]/pattern/item[0]/value)
                          ~ name (in_body[0]/pattern/item[0]/value/item[0])
                          ~~ expression (in_body[0]/pattern/item[0]/value/item[0])
                               ~ name (in_body[0]/pattern/item[1])
                               ~~ expression (in_body[0]/pattern/item[1])
                                            ~ selector (in_body[0]/body)
                                            ~~~ expression (in_body[0]/body)
                                              ~ name (in_body[0]/body/args[0])
                                              ~ expression (in_body[0]/body/args[0])
--AST
s(:case_match,
  s(:lvar, "foo"),
  s(:in_pattern,
    s(:hash_pattern,
      s(:pair,
        s(:sym, "a"),
        s(:hash_pattern,
          s(:match_var, "b"))),
      s(:match_var, "c")), nil,
    s(:send, nil, "p",
      s(:lvar, "c"))), nil)
