--INPUT
case foo; in (1) then true; end
--LOCATIONS
~~~~ keyword ()
                            ~~~ end ()
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression ()
     ~~~ name (expr)
     ~~~ expression (expr)
                 ~~~~ begin (in_body[0])
          ~~ keyword (in_body[0])
          ~~~~~~~~~~~~~~~~ expression (in_body[0])
             ~ begin (in_body[0]/pattern)
               ~ end (in_body[0]/pattern)
             ~~~ expression (in_body[0]/pattern)
              ~ expression (in_body[0]/pattern/stmt[0])
                      ~~~~ expression (in_body[0]/body)
--AST
s(:case_match,
  s(:lvar, "foo"),
  s(:in_pattern,
    s(:begin,
      s(:int, "1")), nil,
    s(:true)), nil)
