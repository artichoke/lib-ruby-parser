--INPUT
if (bar; a, b = foo); end
--LOCATIONS
~~ keyword ()
                      ~~~ end ()
                    ~ begin ()
~~~~~~~~~~~~~~~~~~~~~~~~~ expression ()
   ~ begin (cond)
                   ~ end (cond)
   ~~~~~~~~~~~~~~~~~ expression (cond)
    ~~~ name (cond/body)
    ~~~ expression (cond/body)
--AST
s(:if,
  s(:begin,
    s(:lvar, "bar"),
    s(:masgn,
      s(:mlhs,
        s(:lvasgn, "a"),
        s(:lvasgn, "b")),
      s(:lvar, "foo"))), nil, nil)
