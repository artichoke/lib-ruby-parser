--INPUT
def f a, o=1, *r, p, &b; end
--LOCATIONS
~~~ keyword ()
    ~ name ()
                         ~~~ end ()
~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression ()
      ~~~~~~~~~~~~~~~~~ expression (args)
      ~ name (args/arg[0])
      ~ expression (args/arg[0])
          ~ operator (args/arg[1])
         ~ name (args/arg[1])
         ~~~ expression (args/arg[1])
           ~ expression (args/arg[1]/default)
               ~ name (args/arg[2])
              ~~ expression (args/arg[2])
                  ~ name (args/arg[3])
                  ~ expression (args/arg[3])
                      ~ name (args/arg[4])
                     ~~ expression (args/arg[4])
--AST
s(:def, "f",
  s(:args,
    s(:arg, "a"),
    s(:optarg, "o",
      s(:int, "1")),
    s(:restarg, "r"),
    s(:arg, "p"),
    s(:blockarg, "b")), nil)
