--INPUT
if foo; bar; else baz; end
--LOCATIONS
~~ keyword ()
                       ~~~ end ()
             ~~~~ else ()
      ~ begin ()
~~~~~~~~~~~~~~~~~~~~~~~~~~ expression ()
   ~~~ name (cond)
   ~~~ expression (cond)
        ~~~ name (if_true)
        ~~~ expression (if_true)
                  ~~~ name (if_false)
                  ~~~ expression (if_false)
--AST
s(:if,
  s(:lvar, "foo"),
  s(:lvar, "bar"),
  s(:lvar, "baz"))
