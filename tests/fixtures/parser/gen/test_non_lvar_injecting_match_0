--INPUT
/#{1}(?<match>bar)/ =~ 'bar'
--LOCATIONS
                    ~~ selector ()
~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression ()
~ begin (recv)
                  ~ end (recv)
~~~~~~~~~~~~~~~~~~~ expression (recv)
 ~~ begin (recv/part[0])
    ~ end (recv/part[0])
 ~~~~ expression (recv/part[0])
   ~ expression (recv/part[0]/stmt[0])
     ~~~~~~~~~~~~~ expression (recv/part[1])
                    expression (recv/opts)
                       ~ begin (args[0])
                           ~ end (args[0])
                       ~~~~~ expression (args[0])
--AST
s(:send,
  s(:regexp,
    s(:begin,
      s(:int, "1")),
    s(:str, "(?<match>bar)"),
    s(:regopt)), "=~",
  s(:str, "bar"))
