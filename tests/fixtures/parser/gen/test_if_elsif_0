--INPUT
if foo; bar; elsif baz; 1; else 2; end
--LOCATIONS
~~ keyword ()
                                   ~~~ end ()
             ~~~~~ else ()
      ~ begin ()
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression ()
   ~~~ name (cond)
   ~~~ expression (cond)
        ~~~ name (if_true)
        ~~~ expression (if_true)
             ~~~~~ keyword (if_false)
                           ~~~~ else (if_false)
                      ~ begin (if_false)
             ~~~~~~~~~~~~~~~~~~~~ expression (if_false)
                   ~~~ name (if_false/cond)
                   ~~~ expression (if_false/cond)
                        ~ expression (if_false/if_true)
                                ~ expression (if_false/if_false)
--AST
s(:if,
  s(:lvar, "foo"),
  s(:lvar, "bar"),
  s(:if,
    s(:lvar, "baz"),
    s(:int, "1"),
    s(:int, "2")))
