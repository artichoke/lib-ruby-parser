--INPUT
a b(c(d)), /x/ do end
--LOCATIONS
               ~~ begin ()
                  ~~~ end ()
~~~~~~~~~~~~~~~~~~~~~ expression ()
~ selector (call)
~~~~~~~~~~~~~~ expression (call)
   ~ begin (call/args[0])
        ~ end (call/args[0])
  ~ selector (call/args[0])
  ~~~~~~~ expression (call/args[0])
     ~ begin (call/args[0]/args[0])
       ~ end (call/args[0]/args[0])
    ~ selector (call/args[0]/args[0])
    ~~~~ expression (call/args[0]/args[0])
      ~ selector (call/args[0]/args[0]/args[0])
      ~ expression (call/args[0]/args[0]/args[0])
           ~ begin (call/args[1])
             ~ end (call/args[1])
           ~~~ expression (call/args[1])
            ~ expression (call/args[1]/part[0])
               expression (call/args[1]/opts)
--AST
s(:block,
  s(:send, nil, "a",
    s(:send, nil, "b",
      s(:send, nil, "c",
        s(:send, nil, "d"))),
    s(:regexp,
      s(:str, "x"),
      s(:regopt))), nil, nil)
