--INPUT
@foo, @@bar = *foo
--LOCATIONS
            ~ operator ()
~~~~~~~~~~~~~~~~~~ expression ()
~~~~~~~~~~~ expression (lhs)
~~~~ name (lhs/item[0])
~~~~ expression (lhs/item[0])
      ~~~~~ name (lhs/item[1])
      ~~~~~ expression (lhs/item[1])
              ~~~~ expression (rhs)
              ~ operator (rhs/item[0])
              ~~~~ expression (rhs/item[0])
               ~~~ name (rhs/item[0]/value)
               ~~~ expression (rhs/item[0]/value)
--AST
s(:masgn,
  s(:mlhs,
    s(:ivasgn, "@foo"),
    s(:cvasgn, "@@bar")),
  s(:array,
    s(:splat,
      s(:lvar, "foo"))))
