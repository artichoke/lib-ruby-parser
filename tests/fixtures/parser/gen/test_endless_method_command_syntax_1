--INPUT
def foo() = puts "Hello"
--LOCATIONS
~~~ keyword (root)
    ~~~ name (root)
          ~ assignment (root)
~~~~~~~~~~~~~~~~~~~~~~~~ expression (root)
       ~ begin (root -> args)
        ~ end (root -> args)
       ~~ expression (root -> args)
            ~~~~ selector (root -> body)
            ~~~~~~~~~~~~ expression (root -> body)
                 ~ begin (root -> body -> args -> 0)
                       ~ end (root -> body -> args -> 0)
                 ~~~~~~~ expression (root -> body -> args -> 0)
--AST
s(:def, "foo",
  s(:args),
  s(:send, nil, "puts",
    s(:str, "Hello")))
