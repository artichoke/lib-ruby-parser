--INPUT
if /wat/; end
--LOCATIONS
~~ keyword ()
          ~~~ end ()
        ~ begin ()
~~~~~~~~~~~~~ expression ()
   ~~~~~ expression (cond)
   ~ begin (cond/value)
       ~ end (cond/value)
   ~~~~~ expression (cond/value)
    ~~~ expression (cond/value/part[0])
         expression (cond/value/opts)
--AST
s(:if,
  s(:match_current_line,
    s(:regexp,
      s(:str, "wat"),
      s(:regopt))), nil, nil)
