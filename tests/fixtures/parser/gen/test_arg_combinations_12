--INPUT
def f *r, p, &b; end
--LOCATIONS
~~~ keyword ()
    ~ name ()
                 ~~~ end ()
~~~~~~~~~~~~~~~~~~~~ expression ()
      ~~~~~~~~~ expression (args)
       ~ name (args/arg[0])
      ~~ expression (args/arg[0])
          ~ name (args/arg[1])
          ~ expression (args/arg[1])
              ~ name (args/arg[2])
             ~~ expression (args/arg[2])
--AST
s(:def, "f",
  s(:args,
    s(:restarg, "r"),
    s(:arg, "p"),
    s(:blockarg, "b")), nil)
