--INPUT
case foo; 
        in {a:
        }
          true
      ; end
--LOCATIONS
~~~~ keyword ()
                                                           ~~~ end ()
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression ()
     ~~~ name (expr)
     ~~~ expression (expr)
                   ~~ keyword (in_body[0])
                   ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression (in_body[0])
                      ~ begin (in_body[0]/pattern)
                                  ~ end (in_body[0]/pattern)
                      ~~~~~~~~~~~~~ expression (in_body[0]/pattern)
                       ~ name (in_body[0]/pattern/item[0])
                       ~~ expression (in_body[0]/pattern/item[0])
                                              ~~~~ expression (in_body[0]/body)
--AST
s(:case_match,
  s(:lvar, "foo"),
  s(:in_pattern,
    s(:hash_pattern,
      s(:match_var, "a")), nil,
    s(:true)), nil)
