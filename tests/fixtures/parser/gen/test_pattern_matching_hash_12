--INPUT
case foo; 
        in {Foo: 42
        }
          false
      ; end
--LOCATIONS
~~~~ keyword ()
                                                                 ~~~ end ()
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression ()
     ~~~ name (expr)
     ~~~ expression (expr)
                   ~~ keyword (in_body[0])
                   ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression (in_body[0])
                      ~ begin (in_body[0]/pattern)
                                       ~ end (in_body[0]/pattern)
                      ~~~~~~~~~~~~~~~~~~ expression (in_body[0]/pattern)
                          ~ operator (in_body[0]/pattern/item[0])
                       ~~~~~~~ expression (in_body[0]/pattern/item[0])
                       ~~~ expression (in_body[0]/pattern/item[0]/key)
                            ~~ expression (in_body[0]/pattern/item[0]/value)
                                                   ~~~~~ expression (in_body[0]/body)
--AST
s(:case_match,
  s(:lvar, "foo"),
  s(:in_pattern,
    s(:hash_pattern,
      s(:pair,
        s(:sym, "Foo"),
        s(:int, "42"))), nil,
    s(:false)), nil)
