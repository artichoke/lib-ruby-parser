--INPUT
t=1;(foo)?t:T
--LOCATIONS
~~~~~~~~~~~~~ expression ()
 ~ operator (stmt[0])
~ name (stmt[0])
~~~ expression (stmt[0])
  ~ expression (stmt[0]/value)
           ~ colon (stmt[1])
         ~ question (stmt[1])
    ~~~~~~~~~ expression (stmt[1])
    ~ begin (stmt[1]/cond)
        ~ end (stmt[1]/cond)
    ~~~~~ expression (stmt[1]/cond)
     ~~~ name (stmt[1]/cond/stmt[0])
     ~~~ expression (stmt[1]/cond/stmt[0])
          ~ name (stmt[1]/if_true)
          ~ expression (stmt[1]/if_true)
            ~ name (stmt[1]/if_false)
            ~ expression (stmt[1]/if_false)
--AST
s(:begin,
  s(:lvasgn, "t",
    s(:int, "1")),
  s(:if,
    s(:begin,
      s(:lvar, "foo")),
    s(:lvar, "t"),
    s(:const, nil, "T")))
