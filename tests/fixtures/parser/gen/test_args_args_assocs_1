--INPUT
fun(foo, :foo => 1, &baz)
--LOCATIONS
   ~ begin ()
                        ~ end ()
~~~ selector ()
~~~~~~~~~~~~~~~~~~~~~~~~~ expression ()
    ~~~ name (args[0])
    ~~~ expression (args[0])
         ~~~~~~~~~ expression (args[1])
              ~~ operator (args[1]/pair[0])
         ~~~~~~~~~ expression (args[1]/pair[0])
         ~ begin (args[1]/pair[0]/key)
         ~~~~ expression (args[1]/pair[0]/key)
                 ~ expression (args[1]/pair[0]/value)
                    ~ operator (args[2])
                    ~~~~ expression (args[2])
                     ~~~ name (args[2]/value)
                     ~~~ expression (args[2]/value)
--AST
s(:send, nil, "fun",
  s(:lvar, "foo"),
  s(:hash,
    s(:pair,
      s(:sym, "foo"),
      s(:int, "1"))),
  s(:block_pass,
    s(:lvar, "baz")))
