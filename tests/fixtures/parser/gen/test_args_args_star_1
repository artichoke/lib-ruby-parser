--INPUT
fun(foo, *bar, &baz)
--LOCATIONS
   ~ begin ()
                   ~ end ()
~~~ selector ()
~~~~~~~~~~~~~~~~~~~~ expression ()
    ~~~ name (args[0])
    ~~~ expression (args[0])
         ~ operator (args[1])
         ~~~~ expression (args[1])
          ~~~ name (args[1]/value)
          ~~~ expression (args[1]/value)
               ~ operator (args[2])
               ~~~~ expression (args[2])
                ~~~ name (args[2]/value)
                ~~~ expression (args[2]/value)
--AST
s(:send, nil, "fun",
  s(:lvar, "foo"),
  s(:splat,
    s(:lvar, "bar")),
  s(:block_pass,
    s(:lvar, "baz")))
