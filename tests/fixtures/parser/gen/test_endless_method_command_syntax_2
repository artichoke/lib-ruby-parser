--INPUT
def foo(x) = puts x
--LOCATIONS
~~~ keyword (root)
    ~~~ name (root)
           ~ assignment (root)
~~~~~~~~~~~~~~~~~~~ expression (root)
       ~ begin (root -> args)
         ~ end (root -> args)
       ~~~ expression (root -> args)
        ~ expression (root -> args -> arglist -> 0)
             ~~~~ selector (root -> body)
             ~~~~~~ expression (root -> body)
                  ~ expression (root -> body -> args -> 0)
--AST
s(:def, "foo",
  s(:args,
    s(:arg, "x")),
  s(:send, nil, "puts",
    s(:lvar, "x")))
