--INPUT
def obj.foo() = puts "Hello"
--LOCATIONS
~~~ keyword (root)
       ~ operator (root)
        ~~~ name (root)
              ~ assignment (root)
~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression (root)
    ~~~ selector (root -> definee)
    ~~~ expression (root -> definee)
           ~ begin (root -> args)
            ~ end (root -> args)
           ~~ expression (root -> args)
                ~~~~ selector (root -> body)
                ~~~~~~~~~~~~ expression (root -> body)
                     ~ begin (root -> body -> args -> 0)
                           ~ end (root -> body -> args -> 0)
                     ~~~~~~~ expression (root -> body -> args -> 0)
--AST
s(:defs,
  s(:send, nil, "obj"), "foo",
  s(:args),
  s(:send, nil, "puts",
    s(:str, "Hello")))
