--INPUT
if (a, b = foo); end
--LOCATIONS
~~ keyword ()
                 ~~~ end ()
               ~ begin ()
~~~~~~~~~~~~~~~~~~~~ expression ()
   ~ begin (cond)
              ~ end (cond)
   ~~~~~~~~~~~~ expression (cond)
         ~ operator (cond/stmt[0])
    ~~~~~~~~~~ expression (cond/stmt[0])
    ~~~~ expression (cond/stmt[0]/lhs)
    ~ name (cond/stmt[0]/lhs/item[0])
    ~ expression (cond/stmt[0]/lhs/item[0])
       ~ name (cond/stmt[0]/lhs/item[1])
       ~ expression (cond/stmt[0]/lhs/item[1])
           ~~~ name (cond/stmt[0]/rhs)
           ~~~ expression (cond/stmt[0]/rhs)
--AST
s(:if,
  s(:begin,
    s(:masgn,
      s(:mlhs,
        s(:lvasgn, "a"),
        s(:lvasgn, "b")),
      s(:lvar, "foo"))), nil, nil)
