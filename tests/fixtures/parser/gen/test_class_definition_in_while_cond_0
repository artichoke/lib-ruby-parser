--INPUT
while class Foo; tap do end; end; break; end
--LOCATIONS
                                ~ begin ()
                                         ~~~ end ()
~~~~~ keyword ()
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression ()
      ~~~~~ keyword (expr)
            ~~~ name (expr)
                             ~~~ end (expr)
      ~~~~~~~~~~~~~~~~~~~~~~~~~~ expression (expr)
            ~~~ name (expr/name)
            ~~~ expression (expr/name)
                     ~~ begin (expr/body)
                        ~~~ end (expr/body)
                 ~~~~~~~~~~ expression (expr/body)
                 ~~~ selector (expr/body/call)
                 ~~~ expression (expr/body/call)
                                  ~~~~~ keyword (body)
                                  ~~~~~ expression (body)
--AST
s(:while,
  s(:class,
    s(:const, nil, "Foo"), nil,
    s(:block,
      s(:send, nil, "tap"), nil, nil)),
  s(:break))
