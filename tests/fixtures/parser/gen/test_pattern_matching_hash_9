--INPUT
case foo; in a: 1, _a:, ** then true; end
--LOCATIONS
~~~~ keyword ()
                                      ~~~ end ()
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression ()
     ~~~ name (expr)
     ~~~ expression (expr)
                           ~~~~ begin (in_body[0])
          ~~ keyword (in_body[0])
          ~~~~~~~~~~~~~~~~~~~~~~~~~~ expression (in_body[0])
             ~~~~~~~~~~~~~ expression (in_body[0]/pattern)
              ~ operator (in_body[0]/pattern/item[0])
             ~~~~ expression (in_body[0]/pattern/item[0])
             ~ expression (in_body[0]/pattern/item[0]/key)
                ~ expression (in_body[0]/pattern/item[0]/value)
                   ~~ name (in_body[0]/pattern/item[1])
                   ~~~ expression (in_body[0]/pattern/item[1])
                        ~~ operator (in_body[0]/pattern/item[2])
                        ~~ expression (in_body[0]/pattern/item[2])
                                ~~~~ expression (in_body[0]/body)
--AST
s(:case_match,
  s(:lvar, "foo"),
  s(:in_pattern,
    s(:hash_pattern,
      s(:pair,
        s(:sym, "a"),
        s(:int, "1")),
      s(:match_var, "_a"),
      s(:match_rest)), nil,
    s(:true)), nil)
