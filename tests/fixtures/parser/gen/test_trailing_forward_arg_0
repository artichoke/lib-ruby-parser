--INPUT
def foo(a, b, ...); bar(a, 42, ...); end
--LOCATIONS
~~~ keyword ()
    ~~~ name ()
                                     ~~~ end ()
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ expression ()
       ~ begin (args)
                 ~ end (args)
       ~~~~~~~~~~~ expression (args)
        ~ name (args/arg[0])
        ~ expression (args/arg[0])
           ~ name (args/arg[1])
           ~ expression (args/arg[1])
              ~~~ expression (args/arg[2])
                       ~ begin (body)
                                  ~ end (body)
                    ~~~ selector (body)
                    ~~~~~~~~~~~~~~~ expression (body)
                        ~ name (body/args[0])
                        ~ expression (body/args[0])
                           ~~ expression (body/args[1])
                               ~~~ expression (body/args[2])
--AST
s(:def, "foo",
  s(:args,
    s(:arg, "a"),
    s(:arg, "b"),
    s(:forward_arg)),
  s(:send, nil, "bar",
    s(:lvar, "a"),
    s(:int, "42"),
    s(:forwarded_args)))
